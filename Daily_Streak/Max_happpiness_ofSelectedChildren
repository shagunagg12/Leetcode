class Solution {
    public long maximumHappinessSum(int[] happiness, int k) {
        int n=happiness.length;
        Arrays.sort(happiness);
        long sum=0;
        int count=0;
        for(int i=n-1;i>=0;i--){
            if(count==k){
                break;
            }
            sum+=Math.max(0,happiness[i]-count);
            count++;
            

        }
        return sum;
        
    }
    
}