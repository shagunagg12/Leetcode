class Solution {
    public int minFlipsMonoIncr(String s) {
       int bcount=0;
        int deletions=0;
        int n=s.length();

        for(int i=0;i<n;i++){
            if(s.charAt(i)=='0'){
                deletions= Math.min(deletions+1,bcount);
            }
            else
            bcount++;
        }
        return deletions;
    }
}